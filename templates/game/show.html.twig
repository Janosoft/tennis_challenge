{% extends 'base.html.twig' %}

{% block title %}Juego {{game.getId()}}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>ID: {{game.getId()}}</h1>
    <ul>
        <li> Lucky: {{game.getLucky()}}</li>
        <li> Favorece Local: {{game.isFavorslocals()?"Si":"No"}}</li>
        <li> Jugador Local: {{game.getHomeplayer().getName()}}</li>
        <li> Jugador Visitante: {{game.getAwayplayer().getName()}}</li>
        <li> <strong>Ganador: {{game.playGame().getName()}}</strong></li>
    </ul>
    <pre>{{game.toJSON()}}</pre>
</div>
{% endblock %}
